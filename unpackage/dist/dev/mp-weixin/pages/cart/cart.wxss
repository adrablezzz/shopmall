.top {
  margin-top: 5rpx;
}
.address-info {
  font-size: 30rpx;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
}
.address-info .user-info {
  display: flex;
  justify-content: space-between;
}
.add-address button {
  font-size: 34rpx;
}
.goods-list {
  height: 200rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}
.goods-list .goods-check {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-list .goods-img-wrapper {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-list .goods-img-wrapper image {
  width: 80%;
  height: 80%;
}
.goods-list .goods-info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-right: 15rpx;
}
.goods-list .goods-info .goods-name {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-list .goods-info .goods-price {
  display: flex;
  justify-content: space-between;
}
.goods-list .goods-info .goods-price .price {
  color: #f00;
}
.goods-list .goods-info .goods-price .goods-num {
  display: flex;
}
.goods-list .goods-info .goods-price .goods-num .edit {
  border: 1px solid #eee;
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-list .goods-info .goods-price .goods-num .num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.no-goods {
  color: #666;
  font-size: 52rpx;
  display: flex;
  height: 80vw;
  justify-content: center;
  align-items: center;
}
.tool {
  background-color: #eee;
  font-size: 30rpx;
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
}
.tool .all-check {
  flex: 1;
  margin-left: 20rpx;
}
.tool .total {
  flex: 3;
  text-align: right;
  margin-right: 20rpx;
}
.tool .total .total-price {
  color: #f00;
  font-size: 34rpx;
  margin-left: 10rpx;
}
.tool .settle {
  color: #fff;
  flex: 1;
  text-align: center;
  background-color: #f00;
  height: 80rpx;
  line-height: 80rpx;
}

