<view><view class="top"><block wx:if="{{addressInfo}}"><view class="address-info"><view class="user-info"><text>{{"收货人: "+addressInfo.userName}}</text><text>{{addressInfo.telNumber}}</text></view><view class="address">{{addressInfo.provinceName+addressInfo.cityName+addressInfo.countyName+addressInfo.detailInfo}}</view></view></block><block wx:else><view class="add-address"><button type="primary" plain="{{true}}" data-event-opts="{{[['tap',[['getAddress',['$event']]]]]}}" bindtap="__e">添加收货地址</button></view></block></view><block wx:if="{{cart.length!==0}}"><view class="mid"><block wx:for="{{cart}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods-list"><view class="goods-check"><checkbox-group name="iCheck"><checkbox checked="{{item.is_checked}}" data-event-opts="{{[['tap',[['checkClick',[index]]]]]}}" bindtap="__e"></checkbox></checkbox-group></view><view class="goods-img-wrapper"><image class="goods-img" src="{{item.goods_small_logo}}" mode="aspectFill"></image></view><view class="goods-info"><view class="goods-name">{{item.goods_name}}</view><view class="goods-price"><text class="price">{{"¥"+item.goods_price}}</text><view class="goods-num"><view data-event-opts="{{[['tap',[['subNum',[index]]]]]}}" class="edit" bindtap="__e">-</view><view class="num">{{item.goods_num}}</view><view data-event-opts="{{[['tap',[['addNum',[index]]]]]}}" class="edit" bindtap="__e">+</view></view></view></view></view></block></view></block><block wx:else><view class="no-goods">你的购物车空的,快去选购吧!</view></block><view class="tool"><checkbox-group class="all-check" name="all-check"><checkbox checked="{{isAllChecked}}" data-event-opts="{{[['tap',[['allCheckClick',['$event']]]]]}}" bindtap="__e"></checkbox></checkbox-group><view class="total">合计:<text class="total-price">{{"¥ "+(totalPrice||0)}}</text></view><view data-event-opts="{{[['tap',[['settle',['$event']]]]]}}" class="settle" bindtap="__e"><text>结算</text><block wx:if="{{cartLength!==0}}"><text>{{"("+cartLength+")"}}</text></block></view></view></view>