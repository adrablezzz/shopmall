.left {
  width: 25%;
  border-right: 1px solid #eee;
  height: 100vh;
}
.left view {
    font-size: 35rpx;
    padding: 25rpx;
}
.left .active {
    color: #fff;
    background-color: #FF9999;
}
.right {
  width: 75%;
  height: 100vh;
  position: absolute;
  left: 25%;
  top: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: wrap;
          flex-flow: wrap;
}
.right .cate_title {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    font-size: 40rpx;
    font-weight: 500;
    margin: 10rpx;
}
.right .content_wrapper {
